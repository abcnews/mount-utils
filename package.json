{
  "name": "@abcnews/mount-utils",
  "version": "2.0.0",
  "description": "Utilities for working with mount points",
  "license": "MIT",
  "author": "Australian Broadcasting Corporation",
  "contributors": [
    "Colin Gourlay <Gourlay.Colin@abc.net.au>",
    "Simon Elvery <Elvery.Simon@abc.net.au>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abcnews/mount-utils.git"
  },
  "bugs": {
    "url": "https://github.com/abcnews/mount-utils/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsup src/index.ts --dts --sourcemap --format esm,cjs --watch",
    "build": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "test": "jest",
    "lint": "eslint src",
    "size": "size-limit",
    "release": "np",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "1 KB"
    },
    {
      "path": "dist/index.js",
      "limit": "1.5 KB"
    }
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@types/jest": "^29.5.3",
    "@types/text-encoding": "0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "np": "^8.0.4",
    "size-limit": "^8.2.6",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  }
}
